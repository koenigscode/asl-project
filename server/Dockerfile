FROM public.ecr.aws/lts/ubuntu:latest

RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-dev \
    libgl1 \
    libglib2.0-0 \
    ffmpeg \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m venv /venv

RUN /venv/bin/pip install --upgrade pip
RUN /venv/bin/pip install django opencv-python-headless tensorflow mediapipe python-dotenv whitenoise moviepy stopwatch.py

WORKDIR /server

COPY . .

RUN /venv/bin/python3 manage.py collectstatic --noinput

RUN /venv/bin/python3 manage.py migrate

EXPOSE 8000

CMD ["/venv/bin/python3", "manage.py", "runserver", "0.0.0.0:8000"]
